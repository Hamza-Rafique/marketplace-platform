// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["views"] // Uncomment later when you need views
}

// ========== ENUMS ==========
enum Role {
  CUSTOMER
  SELLER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

// ========== MODELS ==========
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String   // Added password field
  role      Role     @default(CUSTOMER)
  stores    Store[]
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Indexes
  @@index([email])
  @@index([role])
}

model Store {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id])
  products    Product[]
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Indexes
  @@index([ownerId])
  @@index([isActive])
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Indexes
  @@index([name])
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  storeId     Int
  store       Store    @relation(fields: [storeId], references: [id])
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  sku         String?  @unique
  orderItems  OrderItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Indexes
  @@index([storeId])
  @@index([categoryId])
  @@index([price])
  @@index([createdAt])
  @@unique([storeId, sku])
}

model Order {
  id          Int         @id @default(autoincrement())
  userId      Int
  user        User        @relation(fields: [userId], references: [id])
  orderItems  OrderItem[]
  total       Decimal     @db.Decimal(10, 2)
  status      OrderStatus @default(PENDING)
  shippingAddress String
  billingAddress  String
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Indexes (only scalar fields)
  @@index([userId, createdAt])
  @@index([status, createdAt])
  @@index([createdAt])
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int     @default(1)
  price     Decimal @db.Decimal(10, 2) // Price at time of purchase
  
  // Indexes
  @@index([orderId])
  @@index([productId])
  @@unique([orderId, productId]) // Prevent duplicate products in same order
}

